mixin footer(items)
  footer.footer&attributes(attributes)
    .wrapper
      .footer__row
        each item in items
          .footer__column
            h3.footer__title!= item.title
            .footer__list
              ul.footer-list
                each link in item.links
                  li.footer-list__item
                    a.footer-list__link(href=link.href)!= link.text

      .footer__accordion
        .footer-accordion
          -
            let i = 1;
            let j = 1;

          each item in items
            .footer-accordion__item
              h3.footer__title(id=`footer-accordion-title-${i}`)
                button.footer-accordion__button(
                  type="button",
                  aria-expanded="false",
                  aria-controls=`footer-accordion-spoiler-${j}`,
                  data-spoiler=`#footer-accordion-spoiler-${j}`
                )!= item.title
                span.footer-accordion__icon
                  svg(
                    width="14",
                    height="8",
                    viewBox="0 0 14 8",
                    xmlns="http://www.w3.org/2000/svg",
                    aria-hidden="true"
                  )
                    path(d="M1.3 0l5.4 4.5L12 0l1.3 1.6-6.6 5.5L0 1.6 1.3 0z")
              .footer-accordion__spoiler(
                id=`footer-accordion-spoiler-${j++}`,
                aria-labelledby=`footer-accordion-title-${i++}`,
                aria-hidden="true"
              )
                ul.footer-list
                  each link in item.links
                    li.footer-list__item.footer-list__item_in-spoiler
                      a.footer-list__link(href=link.href)!= link.text
